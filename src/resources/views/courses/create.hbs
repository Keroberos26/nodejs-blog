<div class="mt-2">
  <h1>Đăng ký khoá học</h1>
  <form method="POST" action="/courses/store">
    <div class="form-outline mb-4">
      <input type="text" id="form1Example1" name="name" class="form-control" />
      <label class="form-label" for="form1Example1">Tên khoá học</label>
    </div>
    <div class="form-outline mb-4">
      <input type="text" id="form1Example2" name="description" class="form-control" />
      <label class="form-label" for="form1Example2">Mô tả</label>
    </div>
    <div class="form-outline mb-4">
      <input type="text" id="form1Example3" name="videoId" class="form-control" />
