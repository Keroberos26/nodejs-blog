<div class="mt-2">
  <h1>Cập nhật khoá học</h1>
  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-outline mb-4">
      <input type="text" id="form1Example1" value="{{course.name}}" name="name" class="form-control" />
      <label class="form-label" for="form1Example1">Tên khoá học</label>
    </div>
    <div class="form-outline mb-4">
      <input type="text" id="form1Example2" value="{{course.description}}" name="description" class="form-control" />
      <label class="form-label" for="form1Example2">Mô tả</label>
    </div>
    <div class="form-outline mb-4">
      <input type="text" id="form1Example3" value="{{course.videoId}}" name="videoId" class="form-control" />
      <label class="form-label" for="form1Example3">Video ID</label>
    </div>

    <button type="submit" class="btn btn-primary btn-block">Sửa khoá học</button>
  </form>
</div>